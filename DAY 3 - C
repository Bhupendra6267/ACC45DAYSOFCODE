//  Write a C program to calculate the value of S where S = 
// 1 + 1/2 + 1/3 + â€¦ + 1/50.
// Expected Output:
// Value of S: 4.50
#include<stdio.h>
void main() {
    float n,sum = 0;
    printf("Enter the number of terms: ");
    scanf("%f", &n);
    printf("1 ");
    for(float i=1;i<=n;i++){
        sum += 1.0/i;
    }
    printf("\n%.2f", sum);
}
